#include <iostream>

using namespace std;
int main() {
  int n, i, v[100]; 
  cout << "n=";cin >> n; 
  for (i = 1; i <= n; i++) 
  {
    cout << "v[" << i << "]=";
    cin >> v[i];
    cout << endl;
  }
  for (i = 1; i <= n; i++) 
    if (v[i] % 2 == 0 && i % 2 != 0)
      s = s + v[i];
  cout << s << endl; 
  return 0;
}
